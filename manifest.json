{
  "name": "煞氣轉換器",
  "version": "0.5",
  "permissions": [
    "storage", "tabs"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["findAndReplaceDOMText.js", "dict.js", "myscript.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon-green.png",
    "default_title": "Click here!"
  },
  "manifest_version": 2
}